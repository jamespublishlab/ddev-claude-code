#ddev-generated
# Install GitHub CLI (update only gh repo to avoid base image GPG issues)
RUN curl -fsSL https://cli.github.com/packages/githubcli-archive-keyring.gpg \
    | dd of=/usr/share/keyrings/githubcli-archive-keyring.gpg \
    && chmod go+r /usr/share/keyrings/githubcli-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/githubcli-archive-keyring.gpg] https://cli.github.com/packages stable main" \
    | tee /etc/apt/sources.list.d/github-cli.list > /dev/null \
    && apt-get update -o Dir::Etc::sourcelist="sources.list.d/github-cli.list" -o Dir::Etc::sourceparts="-" -o APT::Get::List-Cleanup="0" \
    && apt-get install -y gh \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI
RUN curl -fsSL https://claude.ai/install.sh | bash \
    && CLAUDE_PATH="$(command -v claude || find /root/.local/bin /usr/local/bin /usr/bin -maxdepth 1 -type f -name claude 2>/dev/null | head -n 1)" \
    && if [ -z "$CLAUDE_PATH" ]; then echo "Claude CLI binary not found after installation" >&2; exit 1; fi \
    && cp "$CLAUDE_PATH" /usr/local/bin/claude \
    && chmod +x /usr/local/bin/claude

# Install ccusage (Claude Code usage stats)
RUN npm install -g ccusage

# Ensure Claude Code skips interactive onboarding in container (GitHub Issue #8938)
# Without this, Claude ignores CLAUDE_CODE_OAUTH_TOKEN and forces interactive login.
# Uses /etc/skel so the file is copied to any user's home directory on creation.
RUN echo '{"hasCompletedOnboarding": true}' > /etc/skel/.claude.json \
    && mkdir -p /etc/skel/.claude
